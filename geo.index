<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monitoramento Remoto de Câmera</title>
    <script src="https://cdn.jsdelivr.net/npm/simplewebrtc/latest-v3.js"></script>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        #remote-container {
            width: 80%;
            max-width: 600px;
            text-align: center;
        }

        #remote-video {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body>

    <div id="remote-container">
        <video id="remote-video" autoplay playsinline></video>
    </div>

    <script>
        // Crie uma instância do SimpleWebRTC
        var webrtc = new SimpleWebRTC({
            localVideoEl: '',
            remoteVideosEl: 'remote-video',
            autoRequestMedia: true,
            debug: false
        });

        // Inicie a comunicação
        webrtc.on('readyToCall', function () {
            webrtc.joinRoom('sua-sala');
        });
    </script>

</body>
</html>

